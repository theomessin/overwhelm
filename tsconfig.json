{
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDirs": ["src", "test"],
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  }
}
